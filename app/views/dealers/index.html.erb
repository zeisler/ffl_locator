<h1>Listing dealers</h1>

<table>
  <thead>
    <tr>
      <th>Licence type</th>
      <th>Licence name</th>
      <th>Business name</th>
      <th>Street</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Lat</th>
      <th>Long</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.licence_type %></td>
        <td><%= dealer.licence_name %></td>
        <td><%= dealer.business_name %></td>
        <td><%= dealer.street %></td>
        <td><%= dealer.state %></td>
        <td><%= dealer.zip_code %></td>
        <td><%= dealer.lat %></td>
        <td><%= dealer.long %></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

